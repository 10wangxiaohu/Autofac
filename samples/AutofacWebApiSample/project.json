{
  "webroot": "wwwroot",
  "version": "1.0.0-*",

  "dependencies": {
    "Microsoft.AspNet.Mvc": "6.0.0-rc1-*",
    "Microsoft.AspNet.IISPlatformHandler": "1.0.0-rc1-*",
    "Microsoft.AspNet.Server.WebListener": "1.0.0-rc1-*",
    "Microsoft.AspNet.StaticFiles": "1.0.0-rc1-*",
    "Autofac": "4.0.0-rc1-*",
    "Autofac.Extensions.DependencyInjection": "4.0.0-rc1-*"
  },

  "commands": {
    "web": "Microsoft.AspNet.Hosting --server Microsoft.AspNet.Server.WebListener --server.urls http://localhost:5000"
  },

  "frameworks": {
    "dnx451": {
      "dependencies": {
        "System.Linq": "4.0.1-beta-*",
        "System.Reflection.Extensions": "4.0.1-beta-*",
        "System.Resources.ResourceManager": "4.0.1-beta-*"
      }
     },
    "dnxcore50": {
      "dependencies": {
        "System.Reflection.Emit": "4.0.1-beta-*"
      }
    }
  },

  "exclude": [
    "wwwroot",
    "node_modules",
    "bower_components"
  ],
  "publishExclude": [
    "node_modules",
    "bower_components",
    "**.xproj",
    "**.user",
    "**.vspscc"
  ]
}
