{
  "packOptions": {
    "owners": [ "Autofac Contributors" ]
  },
  "buildOptions": {
    "keyFile": "../../Autofac.snk",
    "embed": {
      "include": ["**/*.resx"],
      "includFiles": ["Files/*.*"]
    }
  },
  "testRunner": "xunit",
  "dependencies": {
    "Autofac": "4.0.0-rc2-*",
    "Autofac.Extensions.DependencyInjection": "4.0.0-rc2-*",
    "Microsoft.Extensions.DependencyInjection": "1.0.0-rc2-*",
    "Microsoft.Extensions.DependencyInjection.Abstractions": "1.0.0-rc2-*",
    "Microsoft.Extensions.DependencyInjection.Specification.Tests": "1.0.0-rc2-*",
    "Microsoft.Extensions.OptionsModel": "1.0.0-rc2-*",
    "StyleCop.Analyzers": { "version": "1.0.0", "type": "build" },
    "xunit": "2.1.0"
  },
  "frameworks": {
    "netcoreapp1.0": {
      "imports": [
        "dnxcore50",
        "portable-net451+win8"
      ],
      "dependencies": {
        "Microsoft.NETCore.App": {
          "version": "1.0.0-rc2-*",
          "type": "platform"
        },
        "System.Diagnostics.Process": "4.1.0-rc2-*",
        "dotnet-test-xunit": "1.0.0-rc2-*"
      }
    },
    "net451": {
      "frameworkAssemblies": {
         "System.Runtime": { "type": "build"}
      },
      "dependencies": {
        "xunit.runner.console": "2.1.0"
      }
    }
  }
}